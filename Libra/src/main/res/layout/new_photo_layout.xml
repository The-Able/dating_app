<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_black_e5"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/geomanist_book"
            android:gravity="top"
            android:lineSpacingExtra="0sp"
            android:text="Login to chat 3"
            android:textColor="@color/app_black"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:alpha="0.4"
            android:fontFamily="@font/geomanist_book"
            android:gravity="top"
            android:lineSpacingExtra="0sp"
            android:text="/3"
            android:textColor="@color/app_black"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/sub_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/space_10"
        android:alpha="0.4"
        android:gravity="top"
        android:lineSpacingExtra="1sp"
        android:text="@string/upload_your_photo"
        android:textColor="@color/app_black"
        android:textSize="16sp"
        android:translationY="-0.45sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/iv_place_holder"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:background="@drawable/dash_circle"
            android:foreground="?attr/selectableItemBackground" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:clickable="false"
            android:id="@+id/cam_icon"
            android:foreground="?attr/selectableItemBackground"
            android:src="@drawable/ic_action_camera" />
    </RelativeLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:foreground="?attr/selectableItemBackground"
        android:padding="8dp"
        app:cornerRadius="8dp"
        app:elevation="0dp"
        android:text="@string/enter"
        android:textAllCaps="false"
        app:backgroundTint="@color/yellow_btn"
        app:icon="@drawable/ic_action_enter"
        app:iconGravity="textStart" />

</LinearLayout>